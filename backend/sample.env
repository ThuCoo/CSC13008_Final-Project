PORT=3000

DATABASE_URL=postgres://username:password@localhost:5432/your_db_name

API_KEY=change-me-to-a-strong-key

# SMTP for sending OTP and notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_SECURE=false
EMAIL_FROM=no-reply@example.com

# reCAPTCHA (verify on server side). Set RECAPTCHA_ENABLED=false to skip verification in dev/tests.
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET=your-secret

# JWT settings
JWT_SECRET=change-me-to-a-strong-secret
JWT_EXPIRES_IN=1h

# Minimum positive rating ratio required for placing bids
RATING_MIN_POSITIVE_RATIO=0.8

# Auto-extend settings (if enabled, bids within WINDOW minutes before end extend by EXTENSION minutes)
AUTO_EXTEND_ENABLED=true
AUTO_EXTEND_WINDOW_MINUTES=5
AUTO_EXTEND_EXTENSION_MINUTES=10

NODE_ENV=development